{
  "manifest_version": 3,
  "name": "VIP Redactosaurus",
  "version": "1.0.0",
  "description": "Anonymizes specific content on webpages before rendering to enable safe product demos",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://dash.parsely.com/*",
        "https://app.parsely.com/*", 
        "https://*.parsely.com/*",
        "http://localhost:*/*",
        "https://example.com/*"
      ],
      "js": ["content/redactosaurus.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "VIP Redactosaurus - Toggle Anonymization"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*", 
        "content/config.json"
      ],
      "matches": [
        "https://dash.parsely.com/*",
        "https://app.parsely.com/*",
        "https://*.parsely.com/*",
        "http://localhost:*/*",
        "https://example.com/*"
      ]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png", 
    "128": "assets/icon128.png"
  }
} 