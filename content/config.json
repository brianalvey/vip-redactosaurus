{
  "settings": {
    "processInterval": 100,
    "maxRetries": 0,
    "debug": true,
    "showDemoIndicator": false
  },
  "urlPatterns": {
    "parsely": {
      "pattern": "https://dash\\.parsely\\.com/([^/]+)/.*",
      "customerIdGroup": 1
    },
    "parsely_direct": {
      "pattern": "https://([^/]+\\.[^/]+)/.*",
      "customerIdGroup": 1
    },
    "hosting-dashboard": {
      "pattern": "dashboard\\.wpvip\\.com/apps/([^/]+)/.*",
      "customerIdGroup": 2
    }
  },
  "customerMapping": {
    "1": {
      "name": "Parsely Analytics",
      "customers": {
        "nypost.com": {
          "customerName": "NY Post",
          "customerDomain": "nypost.com"
        },
        "theonion.com": {
          "customerName": "The Onion",
          "customerDomain": "theonion.com"
        },
        "yahoo.vip.net": {
          "customerName": "Yahoo Inc",
          "customerDomain": "yahoo.com"
        },
        "cnn.vip.net": {
          "customerName": "CNN Digital",
          "customerDomain": "cnn.com"
        }
      }
    },
    "2": {
      "name": "VIP Hosting Platform",
      "customers": {
        "nytimes": {
          "customerName": "The New York Times",
          "customerDomain": "nytimes.com"
        },
        "washpost": {
          "customerName": "The Washington Post",
          "customerDomain": "washingtonpost.com"
        },
        "techcrunch": {
          "customerName": "TechCrunch Media",
          "customerDomain": "techcrunch.com"
        }
      }
    }
  },
  "transformations": [
    {
      "name": "customer_names",
      "type": "customerReplace", 
      "selectors": [
        ".customer-name",
        ".site-name", 
        ".publisher-name",
        "[data-customer-name]",
        ".site-title",
        ".brand-name"
      ],
      "options": {
        "replaceWith": "customerName",
        "fallback": "Customer X"
      }
    },
    {
      "name": "customer_domains",
      "type": "customerReplace",
      "selectors": [
        ".domain",
        ".website",
        "[data-domain]",
        ".site-url"
      ],
      "options": {
        "replaceWith": "customerDomain", 
        "fallback": "customerx.com"
      }
    },
    {
      "name": "headlines_scramble",
      "type": "scramble",
      "selectors": [
        "a.post-title",
        "div.title h1",
        "div.google-key-label"
      ],
      "options": {
        "preserveCase": true,
        "preservePunctuation": true,
        "preserveSpaces": true,
        "preserveLength": true,
        "preserveEnds": true
      }
    },
    {
      "name": "author_names",
      "type": "functionReplace",
      "selectors": [
        "p.author-name", "p.byline", "div.post-metas div.author a", "div.byline span.byline-meta span a"
      ],
      "options": {
        "functionName": "generateRandomAuthorName",
        "functionArgs": {
          "firstNames": [
            "Aisha", "Benjamin", "Carmen", "Dmitri", "Elena", "Finn", "Grace", "Hassan", "Isabella", "Jin", "Kenji", "Lucia", "Miguel", "Nora", "Omar", "Priya", "Quinn", "Raj", "Sofia", "Tomoko", "Ulrich", "Veronica", "Wei", "Ximena", "Yuki", "Zara", "Adrian", "Beatrice", "Carlos", "Diana", "Ethan", "Fatima", "Gabriel", "Hana", "Ivan", "Jasmine", "Klaus", "Leila", "Marco", "Natasha", "Oscar", "Petra", "Quincy", "Rosa", "Sebastian", "Tara", "Uri", "Victoria", "Wolfgang", "Xander", "Yvette", "Zachary"
          ],
          "lastNames": [
            "Anderson", "Blackwood", "Chen", "Delacroix", "Eriksson", "Fernandez", "Gonzalez", "Hoffman", "Ivanov", "Jackson", "Kim", "Lopez", "Murphy", "Nakamura", "O'Brien", "Patel", "Quinn", "Rodriguez", "Singh", "Thompson", "Ueda", "Volkov", "Williams", "Xu", "Yamamoto", "Ziegler", "Abramovich", "Brennan", "Castillo", "Davies", "Engstr√∂m", "Fischer", "Garc√≠a", "Hashimoto", "Ibrahim", "Jensen", "Kowalski", "Laurent", "Mart√≠nez", "Nielsen", "Okafor", "Petrov", "Qureshi", "Rossi", "Swanson", "Taylor", "Underwood", "Varga", "Walsh", "Xiang", "Yoshida", "Zimmerman"
          ]
        }
      }
    },
    {
      "name": "company_names",
      "type": "functionReplace",
      "selectors": [
        ".company-name",
        ".organization",
        ".corp-name"
      ],
      "options": {
        "functionName": "generateRandomCompany",
        "functionArgs": {
          "prefixes": ["Global", "Dynamic", "Prime", "Elite", "Advanced", "Strategic"],
          "suffixes": ["Corp", "Inc", "LLC", "Solutions", "Industries", "Group"],
          "types": ["Media", "Tech", "Digital", "Systems", "Networks", "Analytics"]
        }
      }
    },
    {
      "name": "email_addresses",
      "type": "functionReplace",
      "selectors": [
        ".email",
        "[href^='mailto:']",
        ".contact-email"
      ],
      "options": {
        "functionName": "generateRandomEmail",
        "functionArgs": {
          "usernames": ["contact", "info", "hello", "support", "team", "admin", "sales"],
          "domains": ["example.com", "demo-site.com", "sample.org", "test.net", "placeholder.co"]
        }
      }
    },
    {
      "name": "article_images",
      "type": "blur",
      "selectors": [
        "div.thumb img",
        "img.thumbnail"
      ],
      "options": {
        "blurAmount": "2px"
      }
    },
    {
      "name": "sensitive_content",
      "type": "sensitiveText",
      "selectors": [
        ".content",
        ".description",
        ".excerpt",
        ".article-body"
      ],
      "options": {
        "scrambleAfterReplace": true,
        "preserveCase": true,
        "preservePunctuation": true,
        "preserveSpaces": true,
        "preserveLength": true,
        "preserveEnds": false,
        "skipElementsContaining": ["a", "button", "input", "select", "textarea"]
      }
    },
    {
      "name": "customer_data_replacement",
      "type": "partialReplace",
      "selectors": [
        "div.post-metas a",
        "#tooltip",
        "a.publisher-link span.publisher-info",
        "div.sitepicker div.publisher span.site-name-wrapper span",
        "div.sitepicker div.toggle-content div span",
        "span.site-name-wrapper span.highlighted"
      ],
      "options": {
        "replacements": {
          "nypost.com": "customerx.com",
          "NY Post": "Customer X",
          "{customerDomain}": "customerx.com",
          "{customerName}": "Customer X"
        },
        "caseSensitive": false,
        "useRegex": false,
        "preserveHtml": true
      }
    },
    {
      "name": "readable_scramble",
      "type": "scramble",
      "selectors": [
        ".readable-text",
        ".partial-scramble"
      ],
      "options": {
        "preserveCase": true,
        "preservePunctuation": true,
        "preserveSpaces": true,
        "preserveLength": true,
        "preserveEnds": true
      }
    },
    {
      "name": "nav_pulldown_scramble",
      "type": "scramble",
      "selectors": [
        "div.apikey-group a span span"
      ],
      "options": {
        "preserveCase": true,
        "preservePunctuation": true,
        "preserveSpaces": true,
        "preserveLength": true,
        "preserveEnds": false
      }
    }
  ],
  "globalCSS": {
    "enabled": true,
    "rules": [
      {
        "selector": "div.navigation nav a.current",
        "properties": {
          "filter": "blur(5px) !important"
        }
      },
      {
        "selector": "div.navigation div.--current span PAUSE",
        "properties": {
          "color": "orange !important"
        }
      },
      {
        "selector": "div.sitepicker div input.filter",
        "properties": {
          "color": "rgba(255, 0, 0, 0) !important"
        }
      },
      {
        "selector": "div.sitepicker div input.filter::after",
        "properties": {
          "content": "'[DEMO FILTER]'",
          "position": "absolute",
          "background": "red",
          "color": "white",
          "padding": "2px 4px",
          "font-size": "10px",
          "z-index": "1000"
        }
      },
      {
        "selector": "h2.subtitle::before PAUSE",
        "properties": {
          "content": "'üè¢ '",
          "color": "blue"
        }
      }
    ],
    "files": [
      "assets/global.css"
    ]
  }
}