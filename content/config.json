{
  "transformations": [
    {
      "name": "headline_scrambling",
      "selectors": [
        "a.post-title", "div.title h1"
      ],
      "type": "scramble",
      "options": {
        "preserveCase": true,
        "preservePunctuation": true,
        "preserveSpaces": true,
        "preserveEnds": true,
        "preservePosition": true,
        "preserveVowels": true
      }
    },
    {
      "name": "author_replacement",
      "selectors": [
        "p.author-name", "p.byline", "div.post-metas div.author a", "div.byline span.byline-meta span a"
      ],
      "type": "static_replace",
      "options": {
        "replacements": {
          "jsFunction": "randomAuthorName"
        }
      }
    },
    {
      "name": "customer_name_replacement",
      "selectors": [
        ".customer-name",
        ".site-name",
        ".publisher-name"
      ],
      "type": "static_replace",
      "options": {
        "replacements": {
          "jsFunction": "randomCompanyName"
        }
      }
    },
    {
      "name": "email_replacement", 
      "selectors": [
        "[href^='mailto:']",
        ".email",
        "[data-email]"
      ],
      "type": "static_replace",
      "options": {
        "replacements": {
          ".*@.*": "{randomEmail}"
        }
      }
    },
    {
      "name": "image_blurring",
      "selectors": [
        ".thumbnail img",
        ".article-image",
        "img[src*='avatar']",
        "img[src*='profile']"
      ],
      "type": "blur",
      "options": {
        "blurAmount": "8px"
      }
    },
    {
      "name": "link_masking",
      "selectors": [
        "a[href^='http']"
      ],
      "type": "mask_links",
      "options": {
        "maskUrl": "https://dash.parsely.com"
      }
    }
  ]
}
